<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Smoother diagonal gradient -->
    <gradient
        android:startColor="#EDE7F6"
        android:endColor="#D1C4E9"
        android:angle="90" />

    <!-- Slightly rounded corners -->
    <corners android:radius="12dp" />

    <!-- Thin border -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Internal padding (optional) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
