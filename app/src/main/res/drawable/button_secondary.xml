<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_elevated"/>
            <stroke android:width="2dp" android:color="@color/primary_netflix_light_red"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card"/>
            <stroke android:width="1dp" android:color="@color/text_tertiary"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>