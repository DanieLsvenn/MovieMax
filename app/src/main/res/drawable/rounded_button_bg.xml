<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Circle fill color -->
    <solid android:color="#33FFFFFF" />  <!-- Slightly transparent white -->

    <!-- Optional: shadow or border -->
    <stroke
        android:width="1dp"
        android:color="#66FFFFFF" />

    <!-- Optional: padding -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
</shape>
