<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/netflix_black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Banner Background Image -->
        <ImageView
            android:id="@+id/ivBannerBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Movie Banner" />

        <!-- Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/banner_gradient_overlay" />

        <!-- Content Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Movie Poster (Small) -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="110dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/ivBannerPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/netflix_medium_gray"
                    android:contentDescription="Movie Poster" />

            </androidx.cardview.widget.CardView>

            <!-- Movie Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <!-- Featured Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEATURED"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/netflix_red"
                    android:background="@drawable/feature_badge_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginBottom="8dp" />

                <!-- Movie Title -->
                <TextView
                    android:id="@+id/tvBannerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Featured Movie"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/netflix_white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:shadowColor="@color/netflix_black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <!-- Genre and Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvBannerGenre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Action"
                        android:textSize="12sp"
                        android:textColor="@color/netflix_light_gray"
                        android:shadowColor="@color/netflix_black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜…"
                        android:textColor="@color/rating_gold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvBannerRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:textColor="@color/netflix_white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp"
                        android:shadowColor="@color/netflix_black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                </LinearLayout>

                <!-- Book Now Button -->
                <Button
                    android:id="@+id/btnBannerBookNow"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:text="Book Now"
                    android:textColor="@color/netflix_white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/netflix_red"
                    app:cornerRadius="16dp"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

        <!-- Premium Format Badge (Optional) -->
        <TextView
            android:id="@+id/tvFormatBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:text="IMAX"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/netflix_white"
            android:background="@drawable/format_badge_bg"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone" />

    </FrameLayout>

</androidx.cardview.widget.CardView>