<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Header với gradient -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient_bg"
        android:padding="20dp"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_bg"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn Đồ Ăn &amp; Nước"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm món để trải nghiệm tốt hơn"
                android:textSize="13sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A1A1A" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false" />

    <!-- Bottom summary bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_bar_bg"
        android:padding="16dp"
        android:elevation="12dp">

        <!-- Summary info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền ghế"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvSeatTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150.000đ"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đồ ăn và nước"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvFoodTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0đ"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A2A2A"
            android:layout_marginBottom="12dp" />

        <!-- Total and button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán"
                    android:textColor="#B0B0B0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGrandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150.000đ"
                    android:textColor="#FF5252"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnConfirmFoods"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Thanh toán"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="32dp"
                android:background="@drawable/btn_payment_bg"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Skip option -->
        <TextView
            android:id="@+id/tvSkipFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bỏ qua, tôi không muốn thêm đồ ăn ›"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:paddingHorizontal="12dp"
            android:minHeight="48dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground" />
    </LinearLayout>
</LinearLayout>