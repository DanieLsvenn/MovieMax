<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_black">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Logo and Search -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/netflix_black"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <!-- Netflix-style Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MovieMax"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_red"
                        android:fontFamily="sans-serif-black" />

                    <ImageView
                        android:id="@+id/btnSearch"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Search"
                        app:tint="@color/netflix_white" />

                    <ImageView
                        android:id="@+id/btnProfile"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_person"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Profile"
                        app:tint="@color/netflix_white" />

                </LinearLayout>

                <!-- Search Bar -->
                <LinearLayout
                    android:id="@+id/searchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/search_background"
                    android:layout_marginHorizontal="16dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Search movies..."
                        android:background="@android:color/transparent"
                        android:textColor="@color/netflix_white"
                        android:textColorHint="@color/netflix_light_gray"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:maxLines="1" />

                    <ImageView
                        android:id="@+id/btnClearSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Clear Search"
                        app:tint="@color/netflix_light_gray" />

                </LinearLayout>

            </LinearLayout>

            <!-- Loading and Error States -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:indeterminateTint="@color/netflix_red"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error loading movies"
                android:textColor="@color/netflix_red"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="16dp" />

            <!-- Movies Sections Container -->
            <LinearLayout
                android:id="@+id/moviesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Featured Movies Banner Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Featured Movies"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/netflix_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See All"
                            android:textSize="14sp"
                            android:textColor="@color/netflix_red"
                            android:padding="4dp" />

                    </LinearLayout>

                    <!-- Featured Movies Banner RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewBanners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_banner" />

                </LinearLayout>

                <!-- Now Playing Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Now Playing"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/netflix_white" />

                        <TextView
                            android:id="@+id/tvSeeAllNowPlaying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See All"
                            android:textSize="14sp"
                            android:textColor="@color/netflix_red"
                            android:padding="4dp" />

                    </LinearLayout>

                    <!-- Now Playing RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewMovies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_movie" />

                </LinearLayout>

                <!-- Coming Soon Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Coming Soon"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/netflix_white" />

                        <TextView
                            android:id="@+id/tvSeeAllComingSoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See All"
                            android:textSize="14sp"
                            android:textColor="@color/netflix_red"
                            android:padding="4dp" />

                    </LinearLayout>

                    <!-- Coming Soon RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewComingSoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_movie" />

                </LinearLayout>

                <!-- IMAX & Premium Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="IMAX Premium"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/netflix_white" />

                        <TextView
                            android:id="@+id/tvSeeAllPremium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See All"
                            android:textSize="14sp"
                            android:textColor="@color/netflix_red"
                            android:padding="4dp" />

                    </LinearLayout>

                    <!-- Premium RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewPremium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_movie" />

                </LinearLayout>

                <!-- Quick Booking Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:background="@color/netflix_medium_gray"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quick Booking"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_white"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book your favorite movies in seconds!"
                        android:textSize="14sp"
                        android:textColor="@color/netflix_light_gray"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btnQuickBooking"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Browse All Movies"
                        android:textColor="@color/netflix_white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/netflix_red"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Search Results Section -->
            <LinearLayout
                android:id="@+id/searchResultsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Search Results Title -->
                <TextView
                    android:id="@+id/tvSearchResultsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Results"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/netflix_white"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="16dp" />

                <!-- Search Results RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSearchResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:clipToPadding="false" />

                <!-- No Results Message -->
                <TextView
                    android:id="@+id/tvNoResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No movies found"
                    android:textColor="@color/netflix_light_gray"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="16dp" />

            </LinearLayout>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>