<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Ảnh món ăn với viền -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baprangbo" />
        </androidx.cardview.widget.CardView>

        <!-- Thông tin món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bắp rang bơ"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvFoodDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vị caramel giòn tan"
                android:textColor="#9E9E9E"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75.000đ"
                android:textColor="#FF5252"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Nút điều khiển số lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/quantity_control_bg"
                android:paddingVertical="2dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_quantity_selector"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Giảm"
                    android:scaleType="centerInside"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="8dp" />

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_quantity_selector"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="Tăng"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>