<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section with Poster Background -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <!-- Background Poster (Blurred) -->
                <ImageView
                    android:id="@+id/ivMovieBackdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.3"
                    android:contentDescription="Movie Backdrop" />

                <!-- Gradient Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hero_gradient_overlay" />

                <!-- Header with back button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circular_button_bg"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:contentDescription="Back"
                        app:tint="@color/netflix_white" />

                </LinearLayout>

                <!-- Hero Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Movie Poster -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="12dp">

                        <ImageView
                            android:id="@+id/ivMoviePoster"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@color/netflix_medium_gray"
                            android:contentDescription="Movie Poster" />

                    </androidx.cardview.widget.CardView>

                    <!-- Movie Title and Basic Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvMovieTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Movie Title"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/netflix_white"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:shadowColor="@color/netflix_black"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â˜…"
                                android:textColor="@color/rating_gold"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tvMovieRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8.5"
                                android:textSize="18sp"
                                android:textColor="@color/netflix_white"
                                android:textStyle="bold"
                                android:layout_marginStart="4dp"
                                android:shadowColor="@color/netflix_black"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/10"
                                android:textSize="16sp"
                                android:textColor="@color/netflix_light_gray"
                                android:shadowColor="@color/netflix_black"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2" />

                        </LinearLayout>

                        <!-- Genre and Duration -->
                        <TextView
                            android:id="@+id/tvMovieGenreAndDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Action â€¢ 120 min"
                            android:textSize="14sp"
                            android:textColor="@color/netflix_light_gray"
                            android:layout_marginTop="4dp"
                            android:shadowColor="@color/netflix_black"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Movie Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Description Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/netflix_white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvMovieDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie description will be loaded here..."
                    android:textSize="16sp"
                    android:textColor="@color/netflix_light_gray"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="24dp" />

                <!-- Movie Details Grid -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/netflix_white"
                    android:layout_marginBottom="16dp" />

                <!-- Genre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_light_gray" />

                    <TextView
                        android:id="@+id/tvMovieGenre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Action, Drama"
                        android:textSize="14sp"
                        android:textColor="@color/netflix_white" />

                </LinearLayout>

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_light_gray" />

                    <TextView
                        android:id="@+id/tvMovieDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="120 minutes"
                        android:textSize="14sp"
                        android:textColor="@color/netflix_white" />

                </LinearLayout>

                <!-- Language -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_light_gray" />

                    <TextView
                        android:id="@+id/tvMovieLanguage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="English"
                        android:textSize="14sp"
                        android:textColor="@color/netflix_white" />

                </LinearLayout>

                <!-- Director -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Director"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_light_gray" />

                    <TextView
                        android:id="@+id/tvMovieDirector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Director Name"
                        android:textSize="14sp"
                        android:textColor="@color/netflix_white" />

                </LinearLayout>

                <!-- Cast -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Cast"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_light_gray" />

                    <TextView
                        android:id="@+id/tvMovieCast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Actor 1, Actor 2, Actor 3"
                        android:textSize="14sp"
                        android:textColor="@color/netflix_white" />

                </LinearLayout>

                <!-- Release Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Released"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/netflix_light_gray" />

                    <TextView
                        android:id="@+id/tvMovieReleaseDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2025-10-19"
                        android:textSize="14sp"
                        android:textColor="@color/netflix_white" />

                </LinearLayout>

                <!-- Bottom Spacing -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Booking Actions Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/netflix_dark_gray"
        android:elevation="12dp"
        android:padding="16dp">

        <!-- Book Tickets Button -->
        <Button
            android:id="@+id/btnBookTickets"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸŽ« Book Tickets"
            android:textColor="@color/netflix_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/netflix_red"
            app:cornerRadius="8dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>