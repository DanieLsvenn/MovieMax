<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BookingActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/txtMovieTitle"
        android:text="Dune: Part Two"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtCinemaInfo"
        android:text="Grand Cinema Hall 1 â€¢ 10:00 AM"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Screen bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#D32F2F"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="SCREEN"
        android:textColor="#F44336"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <!-- Seat grid -->
    <GridLayout
        android:id="@+id/seatGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="10"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Legend -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#4CAF50" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Available  "
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#D32F2F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Selected  "
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#808080" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Booked"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Selected seats info -->
    <TextView
        android:id="@+id/txtSelectedSeats"
        android:text="Selected Seats: None"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTotalPrice"
        android:text="$0.00"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Book button -->
    <Button
        android:id="@+id/btnBook"
        android:text="Book 0 Seats"
        android:textAllCaps="false"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>