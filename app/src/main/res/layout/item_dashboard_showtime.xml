<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="16dp">

        <!-- Left accent bar -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FF6F00"
            android:layout_marginEnd="12dp" />

        <!-- Main content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Movie Title and Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMovieTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Movie Title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 min"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:background="@drawable/bg_duration_badge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Time Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    app:tint="#FF6F00" />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-01-15 14:30"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginStart="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textSize="14sp"
                    android:textColor="#BDBDBD"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:30"
                    android:textSize="14sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <!-- Location Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#FF6F00" />

                <TextView
                    android:id="@+id/tvCinemaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cinema Name"
                    android:textSize="13sp"
                    android:textColor="#616161"
                    android:layout_marginStart="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="13sp"
                    android:textColor="#BDBDBD"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvRoomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room 1"
                    android:textSize="13sp"
                    android:textColor="#616161"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Price section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_price_container"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:textSize="10sp"
                android:textColor="#FF8F00"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12.50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action buttons overlay (optional - can be revealed on click) -->
    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:paddingEnd="8dp"
        android:visibility="gone"
        android:background="#F0FFFFFF">

        <ImageButton
            android:id="@+id/btnEditShowtime"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit showtime"
            app:tint="#5E35B1"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnDeleteShowtime"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete showtime"
            app:tint="#E53935" />
    </LinearLayout>

</androidx.cardview.widget.CardView>