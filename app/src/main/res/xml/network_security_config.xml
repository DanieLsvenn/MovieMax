<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Cho phép tất cả request HTTP (cleartext) -->
    <base-config cleartextTrafficPermitted="true" />

    <!-- Nếu chỉ muốn cho phép một domain cụ thể -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">103.200.20.174</domain>
    </domain-config>
</network-security-config>